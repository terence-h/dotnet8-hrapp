{
    "version": "0.2.0",
    "configurations": [        
        {
            "name": "Debug Start",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/net8.0/dotnet8-practice.server.dll",
            "cwd": "${workspaceFolder}",
            "launchSettingsFilePath": "${workspaceFolder}/Properties/launchSettings.json",
            "launchSettingsProfile": "https",
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            },
        }
    ]
}