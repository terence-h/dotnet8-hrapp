@model dotnet8_hrapp_razor.client.Models.Employee.EmployeeDetailModel
@{
    Layout = null;
}

<div class="container">
    <div class="row mb-4">
        <div class="col-sm-4">
            <label asp-for="Id" class="fw-bold"></label>
            <div class="fw-normal">
                @Model.Id
            </div>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-sm-4">
            <label asp-for="Salary" class="fw-bold"></label>
            <div class="fw-normal">
                $@Model.Salary.ToString("F2")
            </div>
        </div>
        <div class="col-sm-4">
            <label asp-for="DepartmentName" class="fw-bold"></label>
            <div class="fw-normal">
                @Model.DepartmentName
            </div>
        </div>
    </div>
</div>